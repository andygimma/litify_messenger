<h1>Dashboard Home</h1>
<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @threads.each do |thread| %>
      <tr>
        <td><%= thread.emails.first.subject %></td>
        <td><%= thread.emails.first.body %></td>
        <td><%= link_to 'Show', thread.emails.first %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @threads %>
<br>

<%= link_to 'New Email', new_email_path %>
