<p>Show Message Thread</p>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Subject</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_threads.reverse.each do |message_thread| %>
      <tr>
        <td><%= message_thread.email.user.email %></td>
        <td><%= message_thread.email.subject %></td>
        <td><%= message_thread.email.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @message_threads %>
<br>

<%= link_to 'Reply', new_email_reply_path(@message_threads.first.email) %>
